name: debug
on:
  pull_request:
    branches:
      - main
    types:
      - opened
      - synchronize
      - reopened

jobs:
  test:
    name: ${{ matrix.test-type }} ${{ matrix.os }} python${{ matrix.python-version }} terraform${{ matrix.terraform-version }}
    runs-on: ${{ matrix.os }}

    strategy:
      fail-fast: true

      matrix:
        os:
          - "ubuntu-22.04"
        python-version:
          - "3.10"
        terraform-version:
          - "1.2.7"
        test-type:
          - "unit-test"
          - "property-test"
          - "functional-test"
          - "security-test"
          - "smoke-test"
          - "acceptance-test"
          - "performance-test"

    steps:
      - name: checkout repo
        uses: actions/checkout@v3
